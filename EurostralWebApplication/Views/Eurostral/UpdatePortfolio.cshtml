@model EurostralWebApplication.Models.Portfolio

@{
    ViewBag.Title = "UpdatePortfolio";
}

<h2>Portfolio composition</h2>

<table class="table table-hover" id="portfolioComposition">
    <thead>
        <tr>
            <th>Asset</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (KeyValuePair<EurostralWebApplication.Models.Index, double> indexAndQuantity in Model.Composition)
        {
            <tr>
                <td>@indexAndQuantity.Key.Name</td>
                <td>@indexAndQuantity.Value</td>
            </tr>
        }
        <tr>
            <td>Risk-free rate</td>
            <td>@Model.RiskFreeRateInvestment</td>
        </tr>
    </tbody>
</table>
