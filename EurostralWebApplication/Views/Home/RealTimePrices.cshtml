                }
                else
                {
                    <span>@Model.Indexes[1].Performance.ToString("0.00000")</span>
                }
            }
        </td>
        <td>
            @if (@Model != null)
            {
                <span>@Model.getIndexWeight(1)</span>
            }
        </td>
    </tr>
    <tr>
        <td class="tdbis">

            <span data-toggle="tooltip" data-placspanent="top"
                  title="Indice regroupant les 200 sociétés ayant les plus importantes capitalisations boursières de la bourse australienne." class="myTooltipLink">S&P ASX 200</span>
        </td>
        <td>
