@model EurostralWebApplication.Models.Eurostral

@{
    ViewBag.Title = "RealTimePrices";
}


<p class="subtitleStyle1"> Indices</p>
<table>
    <tr>
        <th>Titres</th>
        <th>Cours Actuel</th>
        <th>Monnaie</th>
        <th>Marché</th>
        <th>Performance</th>
        <th>Poids</th>
    </tr>
    <tr>
        <td class="tdbis">
            <span data-toggle="tooltip" data-placspanent="top"
                  title="Indice regroupant les 50 sociétés ayant les plus importantes capitalisations boursières au sein de la zone Euro." class="myTooltipLink">Euro Stoxx 50</span>
        </td>
        <td>
            @if (@Model != null)
            {
                <span>@Model.Indexes[0].Price.ToString("0.00000")</span>
            }
        </td>
        <td>EUR</td>
        <td>
            <span id="EurostoxxOpening" class="myTooltipLink" data-toggle="tooltip" data-placspanent="top"
                  title="Ouverture : 9h - 17h30"></span>
        </td>
        <td>
            @if (@Model != null)
            {
                if (@Model.Indexes[0].IsIncreasingOrDecreasing == 1)
                {
                    <span class="value-up">@Model.Indexes[0].Performance.ToString("0.00000")</span>
                }
                else if (@Model.Indexes[0].IsIncreasingOrDecreasing == -1)
                {
                    <span class="value-down">@Model.Indexes[0].Performance.ToString("0.00000")</span>
                }
                else
                {
                    <span>@Model.Indexes[0].Performance.ToString("0.00000")</span>
                }
            }
        </td>
        <td>
            @if (@Model != null)
            {
                <span>@Model.getIndexWeight(0)</span>
            }
        </td>
    </tr>
    <tr>
        <td class="tdbis">
            <span data-toggle="tooltip" data-placspanent="top"
                  title="Indice regroupant les 500 grandes sociétés cotées sur les bourses des États-Unis d'Amérique." class="myTooltipLink">S&P 500</span>
        </td>
