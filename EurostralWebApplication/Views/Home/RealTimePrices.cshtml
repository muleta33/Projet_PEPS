            }
        </td>
        <td>USD</td>
        <td>
            <span id="Sp500Opening" class="myTooltipLink" data-toggle="tooltip" data-placspanent="top"
                  title="Ouverture : 15h30 - 22h"></span>
        </td>
        <td>
            @if (@Model != null)
            {
                if (@Model.Indexes[1].IsIncreasingOrDecreasing == 1)
