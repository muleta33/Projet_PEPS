@model EurostralWebApplication.Models.Eurostral

@{
    ViewBag.Title = "Prices";
}

<table class="table canChange">
    <thead>
        <tr><th>Indices</th><th>Cours actuel</th><th>Monnaie</th><th>Performance</th><th>Poids</th></tr>
    </thead>
    <tbody>
        <tr>
            <th>Euro Stoxx 50</th>
            <td>
                @if (@Model != null)
                {
                    <em>@Model.Indexes[0].Price</em>
                }
            </td>
            <td>EUR</td>
            <td>
                @if (@Model != null)
                {
                    if (@Model.Indexes[0].IsIncreasingOrDecreasing == 1)
                    {
                        <em class="text-success">@Model.Indexes[0].Performance</em>
                    }
                    else if (@Model.Indexes[0].IsIncreasingOrDecreasing == -1)
                    {
                        <em class="text-danger">@Model.Indexes[0].Performance</em>
                    }
                    else
                    {
                        <em>@Model.Indexes[0].Performance</em>
                    }
                }
            </td>
            <td>
                @if (@Model != null)
                {
                    <em>@Model.getIndexWeight(0)</em>
                }
            </td>
        </tr>
        <tr>
            <th>S&P 500</th>
            <td>
                @if (@Model != null)
                {
                    <em>@Model.Indexes[1].Price</em>
                }
            </td>
            <td>USD</td>
            <td>
                @if (@Model != null)
                {
                    if (@Model.Indexes[1].IsIncreasingOrDecreasing == 1)
                    {
