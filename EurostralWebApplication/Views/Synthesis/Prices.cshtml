                        <em class="text-danger">@Model.Indexes[1].Performance</em>
                    }
                    else
                    {
                        <em>@Model.Indexes[1].Performance</em>
                    }
                }
            </td>

            <td>
                @if (@Model != null)
                {
                    <em>@Model.getIndexWeight(1)</em>
                }
            </td>
        </tr>
        <tr>
            <th>S&P ASX 200</th>
            <td>
                @if (@Model != null)
                {
                    <em>@Model.Indexes[2].Price</em>
                }
            </td>
            <td>AUD</td>
            <td>
                @if (@Model != null)
                {
                    if (@Model.Indexes[2].IsIncreasingOrDecreasing == 1)
                    {
                        <em class="text-success">@Model.Indexes[2].Performance</em>
                    }
                    else if (@Model.Indexes[2].IsIncreasingOrDecreasing == -1)
                    {
                        <em class="text-danger">@Model.Indexes[2].Performance</em>
                    }
                    else
                    {
                        <em>@Model.Indexes[2].Performance</em>
                    }
                }
            </td>

            <td>
                @if (@Model != null)
                {
                    <em>@Model.getIndexWeight(2)</em>
                }
            </td>
        </tr>
    </tbody>
</table>

